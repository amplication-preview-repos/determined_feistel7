datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt                  DateTime @default(now())
  email                      String   @unique
  facebookAccessToken        String?
  facebookAccessTokenExpired Boolean?
  firebaseAuthId             String?  @unique
  firstName                  String?
  id                         String   @id @default(cuid())
  lastName                   String?
  onboardingCompleted        Boolean?
  roles                      Json
  updatedAt                  DateTime @updatedAt
}

model Team {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  industry   String?
  members    Json
  name       String?
  updatedAt  DateTime @updatedAt
  websiteUrl String?
}
